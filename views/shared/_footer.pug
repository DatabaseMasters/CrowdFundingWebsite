block append additionlCSS
    link(rel="stylesheet", href="/static/css/footer.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

mixin footer()
    footer#footer
        form#contact-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        h3#modal-label.modal-title New message
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
                    .modal-body
                        form
                            .form-group
                                label.form-control-label(for='recipient-name') Your name:
                                input#sender-name.form-control(type='text', required='required')
                            .form-group
                                label.form-control-label(for='recipient-name') Subject:
                                input#subject-text.form-control(type='text', required='required')
                            .form-group
                                label.form-control-label(for='message-text') Message:
                                textarea#message-text.form-control(rows='10', required='required')
                    .modal-footer
                        button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                        button#feedback-submit.btn.btn-primary(type='sumbit') Send message
        .footer-top.container
            .footer-left
                
                ul#main-navigation
                    li
                        a(href='/')
                            | Home 
                    li
                        a(href='/about')
                            | About 
                    li
                        a(href='', data-toggle='modal', data-target='#contact-modal')
                            | Contact Us 
            .footer-right
                .newsletter-box
                    form#subscribe-form
                        p.subscribe-text
                            i.fa.fa-paper-plane
                            |  Subscribe to our weekly newsletter:
                        input#subscribe-email(type='email', required='required', name='email', placeholder='Your email address', data-toggle='popover', data-content='Resultddddd', data-placement='top', data-trigger="manual" )
                        button#subscribe-submit.btn.btn-default(type='submit') Subscribe 
                .social-container
                    ul.social
                        li
                            a(href='https://github.com/TeamVencedores/CrowdFundingWebsite')
                                i.fa.fa-github    
                        li
                            a(href='https://www.facebook.com/')
                                i.fa.fa-facebook    
                        li
                            a(href='https://twitter.com/')
                                i.fa.fa-twitter    
                        li
                            a(href='https://plus.google.com/')
                                i.fa.fa-google-plus    
                        li
                            a(href='https://www.youtube.com')
                                i.fa.fa-youtube    
                        li
                            a(href='https://www.linkedin.com')
                                i.fa.fa-linkedin    
        .footer-bottom
