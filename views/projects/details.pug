                        | Video
                    a.Quick-navigation-item(href='#story')
                        | Story
                    a.Quick-navigation-item(href='#donate')
                        | Donate
                    a.Quick-navigation-item(href='#comments')
                        | Comments
                section#title.js-scroll-step
                    img(src=model.coverImg, style='width:100%', alt='Image')
