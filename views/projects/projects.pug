div.container-fluid.bg-3
    br
    div.row
        each project in model
            div#project-box.col-sm-3.text-center
                a(href="/projects/" + project.ref)
                    img.img-responsive(src=project.coverImg, alt='Project cover')
                h4.text-center 
                    a(href="/projects/" + project.ref)
                        =project.title 
                div.hideLong 
                    =project.description

    //- TODO Pagination not completed
    .row
        nav
            ul.pager
                li
                    a(href='#/' + model[0].category + '/1') Previous 
                li
                    a(href='#/'+ model[0].category +'/2') Next

